<odoo>
    <data>
<!--    explicit list view definition -->
        <record model="ir.ui.view" id="odoo_lab1.station_list">
          <field name="name">odoo_lab1 list</field>
          <field name="model">iti.lab1.station</field>
          <field name="arch" type="xml">
            <tree>
              <field name="name"/>
            </tree>
          </field>
        </record>

<!--    Form View-->
        <record model="ir.ui.view" id="odoo_lab1.station_form">
          <field name="name">odoo_lab1 form</field>
          <field name="model">iti.lab1.station</field>
          <field name="arch" type="xml">
            <form>
              <sheet>
                <group>
                  <h1>
                    <field name="name"/>
                  </h1>
                  <field name="calls">
                    <tree>
                        <field name="source"/>
                        <field name="duration"/>
                    </tree>
                  </field>
                </group>
              </sheet>
            </form>
          </field>
        </record>

<!--    actions opening views on models -->
        <record model="ir.actions.act_window" id="odoo_lab1.station_action_window">
          <field name="name">odoo_lab1 window</field>
          <field name="res_model">iti.lab1.station</field>
          <field name="view_mode">tree,form</field>
        </record>

<!-- menu categories -->
        <menuitem name="Station" id="odoo_lab1.menu_2" parent="odoo_lab1.menu_root"/>

<!-- actions -->
        <menuitem name="Station" id="odoo_lab1.menu_1__station_list" parent="odoo_lab1.menu_1"
              action="odoo_lab1.station_action_window"/>
    </data>
</odoo>